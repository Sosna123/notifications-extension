{
    "manifest_version": 3,
    "name": "Remember It",
    "version": "1.0",

    "description": "very cool extension",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"]
        }
    ],

    "action": {
        "default_popup": "./popup/index.html",
        "default_icon": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["backgroundReminder.js"],
        "type": "module"
    }
}
